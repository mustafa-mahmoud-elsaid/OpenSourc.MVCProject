@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create new Department</h1>


<form  asp-action="Create">
    <div class="form-group">
        <label asp-for="Code"></label>
        <input class="form-control"  asp-for="Code"/>
        <span class="text-danger " asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger " asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span class="text-danger " asp-validation-for="DateOfCreation"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit" >Create</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>