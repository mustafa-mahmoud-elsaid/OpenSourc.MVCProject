@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_newLayout.cshtml";
}




<a asp-action="Create" class="btn btn-primary mt-3">Create New Employee</a>

<div class="mt-2">
    <form asp-action="Index" method="get" class="row offset-2">
        <div class="col-10">
            <input  class=" form-control" placeholder="Employee`s Name" name="searchValue" required/>
        </div>
        <div class="col-2">
            <input  type="submit" class="btn btn-info" value="Search"/>
        </div>
    </form>
</div>
<table class="table table-striped table-hover  mt-3">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(d => d.Image)</td>
            <td>@Html.DisplayNameFor(d => d.Name)</td>
            <td>@Html.DisplayNameFor(d => d.Age)</td>
            <td>@Html.DisplayNameFor(d => d.Department)</td>
            <td>@Html.DisplayNameFor(d => d.Salary)</td>
            <td>@Html.DisplayNameFor(d => d.Address)</td>
            <td>@Html.DisplayNameFor(d => d.Email)</td>
            <td>@Html.DisplayNameFor(d => d.Phone)</td>
            <td>@Html.DisplayNameFor(d => d.IsActive)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>


        </tr>

    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><img src="~/Files/Images/@employee.ImageName"  class="w-75 h-75 rounded"/></td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.Department?.Name</td>
                <td>@Html.DisplayFor(e => employee.Salary)</td>
                <td>@employee.Address</td>
                <td>@Html.DisplayFor(e => employee.Email)</td>
                <td>@employee.Phone</td>
                <td>
                    @if (employee.IsActive)
                    {
                        <i class="fa-solid fa-circle " style="color:green"></i>
                    }
                    else
                    {

                        <i class="fa-solid fa-circle " style="color:red"></i>
                    }
                </td>
                <partial name="_ButtonsPartial" Model="@employee.Id.ToString()"></partial>

            </tr>
        }
    </tbody>
</table>
