@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<a asp-action="Create" class="btn btn-primary mt-3">Create New Role</a>



<div class="mt-2">
    <form asp-action="Index" method="get" class="row offset-2">
        <div class="col-10">
            <input class=" form-control" placeholder="User`s Name" name="email" required />
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-info" value="Search" />
        </div>
    </form>
</div>
<table class="table table-striped table-hover  mt-3">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(d => d.Id)</td>
            <td>@Html.DisplayNameFor(d => d.Name)</td>


            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>


        </tr>

    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>

               
                <partial name="_ButtonsPartial" Model="@user.Id "></partial>

            </tr>
        }
    </tbody>
</table>


