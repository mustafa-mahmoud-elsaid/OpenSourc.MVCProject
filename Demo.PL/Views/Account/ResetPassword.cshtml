<section class="wrapper d-flex justify-content-center align-items-center vh-100">
    <main class="container">
        <h1 class="text-center">Reset Password</h1>
        <form asp-action="ResetPassword" class="form" method="post">
            <div class="error" asp-validation-summary="ModelOnly"></div>
            <input hidden asp-for="Token" />
            <input class="d-none" asp-for="Email" />
            <div class="form__group field">
                <input id="password" value="@Model?.Password" name="@Html.DisplayNameFor(e=>e.Password)" type="password" class="form__field" placeholder="Password" required>
                <label asp-for="Password" class="form__label">Password</label>
                <span class="error" asp-validation-for="Password"></span>

                <i id="togglePassword" role="button" aria-label="toggole password show" class="fa-regular fa-eye-slash position-absolute end-0 bottom-0 p-2"></i>
            </div>
            <div class="form__group field">
                <input id="password" value="@Model?.ConfirmPassword" name="@Html.DisplayNameFor(e=>e.ConfirmPassword)" type="password" class="form__field" placeholder="Confirm Password" required>
                <label asp-for="ConfirmPassword" class="form__label">Confirm Password</label>
                <span class="error" asp-validation-for="ConfirmPassword"></span>

                <i id="togglePassword" role="button" aria-label="toggole password show" class="fa-regular fa-eye-slash position-absolute end-0 bottom-0 p-2"></i>
            </div>
            <div class="d-flex align-items-center pt-3 flex-wrap">

                <button class="button button--submit">Reset</button>
            </div>

        </form>


    </main>

</section>

@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
