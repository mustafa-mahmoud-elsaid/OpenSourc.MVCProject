@model Department
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_newLayout.cshtml";
}

<h1>Create new Department</h1>


<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        @* <span class="text-danger " asp-validation-for="Code"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        @* <span class="text-danger " asp-validation-for="Name"></span> *@
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        @* <span class="text-danger " asp-validation-for="DateOfCreation"></span> *@
    </div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>

