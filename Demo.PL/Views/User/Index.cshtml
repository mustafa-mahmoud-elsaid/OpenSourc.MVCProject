@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}








<div class="mt-2">
    <form asp-action="Index" method="get" class="row offset-2">
        <div class="col-10">
            <input class=" form-control" placeholder="User`s Name" name="email" required />
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-info" value="Search" />
        </div>
    </form>
</div>
<table class="table table-striped table-hover  mt-3">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(d => d.FirstName)</td>
            <td>@Html.DisplayNameFor(d => d.LastName)</td>
            <td>@Html.DisplayNameFor(d => d.UserName)</td>
            <td>@Html.DisplayNameFor(d => d.Email)</td>
            <td>@Html.DisplayNameFor(d => d.Roles)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>


        </tr>

    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@Html.DisplayFor(e => user.Email)</td>
                <td>@string.Join(",", user.Roles)</td>

                <partial name="_ButtonsPartial" Model="@user.Id"></partial>

            </tr>
        }
    </tbody>
</table>


